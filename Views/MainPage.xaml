<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:IndustrialLink.ViewModels"
             x:Class="IndustrialLink.Views.MainPage"
             Title="Industrial Link - Serial Monitor">
   
    <Grid RowDefinitions="Auto, Auto, *" Padding="20" RowSpacing="15">
        <Label Grid.Row="0"
               Text="{Binding StatusMessage}"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black" />
        <Button Grid.Row="1"
                       Text="Verbindung testen (Simulation)"
                       Command="{Binding ConnectCommand}"
                       HeightRequest="50"
                       BackgroundColor="{StaticResource Primary}" />

        <Border Grid.Row="2" StrokeThickness="1" Stroke="#CCCCCC" Padding="5">
            <CollectionView ItemsSource="{Binding ReceivedData}">
                <CollectionView.EmptyView>
                    <Label Text="Noch keine Daten empfangen..."
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding .}"
                               FontFamily="monospace"
                               Padding="2" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>
